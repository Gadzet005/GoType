{
  "name": "gotype",
  "version": "1.1.0",
  "license": "MIT",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k --success first \"vite\" \"yarn dev:electron\"",
    "dev:electron": "ELECTRON_IS_DEV=1 NODE_OPTIONS='--import tsx' yarn electron src/main/main.ts 2>/dev/null",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:app": "yarn build:renderer && yarn build:main",
    "build:linux": "yarn build:app && yarn electron-builder --linux",
    "build:win": "yarn build:app && yarn electron-builder --win --x64",
    "build:mac": "yarn build:app && yarn electron-builder --mac --x64"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/onest": "^5.1.1",
    "@fontsource/roboto": "^5.1.1",
    "@mui/icons-material": "^6.3.0",
    "@mui/material": "^6.3.0",
    "@react-spring/web": "^9.7.5",
    "@types/ungap__structured-clone": "^1.2.0",
    "@uiw/react-color": "^2.4.5",
    "@ungap/structured-clone": "^1.3.0",
    "axios": "^1.7.9",
    "deepmerge": "^4.3.1",
    "electron-devtools-installer": "^4.0.0",
    "electron-store": "^8.2.0",
    "formik": "^2.4.6",
    "formik-mui": "^5.0.0-alpha.1",
    "fs-jetpack": "^5.1.0",
    "heap-js": "^2.6.0",
    "jszip": "^3.10.1",
    "lru-cache": "^11.0.2",
    "mobx": "^6.13.5",
    "mobx-react": "^9.2.0",
    "node-web-audio-api": "^1.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^4.6.1",
    "react-use-audio-player": "^3.0.2",
    "react-use-measure": "^2.1.7",
    "typescript-eslint": "^8.29.1",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.4",
    "concurrently": "^8.0.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.5",
    "vitest": "^3.0.4"
  },
  "build": {
    "appId": "gotype.com",
    "productName": "GoType!",
    "directories": {
      "output": "dist/release"
    },
    "extraResources": [
      {
        "from": "src/main/preload.js",
        "to": "preload.js"
      }
    ],
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "!dist/**/*.map"
    ],
    "linux": {
      "category": "Game"
    },
    "win": {
      "target": "nsis"
    }
  }
}
