{
  "name": "desktop",
  "version": "1.0.0",
  "license": "MIT",
  "main": "main/main.ts",
  "scripts": {
    "dev": "yarn concurrently -k --success first \"yarn run dev:main\" \"yarn run dev:renderer\"",
    "dev:renderer": "yarn vite renderer --host='localhost' --port='5173' --strictPort",
    "dev:main": "ELECTRON_IS_DEV=1 ELECTRON_START_URL='http://localhost:5173' NODE_OPTIONS='--import tsx' yarn electron . 2>/dev/null",
    "build": "tsc -b renderer && vite build renderer && electron-builder",
    "test": "vitest --root renderer",
    "test:watch": "vitest --root renderer --watch",
    "test:coverage": "vitest --root renderer --coverage"
  },
  "dependencies": {
    "@datastructures-js/queue": "^4.2.3",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/onest": "^5.1.1",
    "@fontsource/roboto": "^5.1.1",
    "@mui/icons-material": "^6.3.0",
    "@mui/material": "^6.3.0",
    "axios": "^1.7.9",
    "electron-store": "^10.0.0",
    "mobx": "^6.13.5",
    "mobx-react": "^9.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.4",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^4.0.0",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vitest": "^3.0.4",
    "yarn": "^1.22.22"
  }
}
